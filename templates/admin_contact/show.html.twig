{% extends 'admin.base.html.twig' %} {% block stylesheets %}
{{ encore_entry_link_tags("adminDashboardCss") }}
{% endblock %} {% block javascripts %}
{{ encore_entry_script_tags("adminDashboardJs") }}
{% endblock %} {% block content %}
<div class="container-fluid px-4">
    <h1>Inspecter le message</h1>
    <div class="card mb-4">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Sujet</th>
                        <th>Message</th>
                    </tr>
                    <tr>
                        <td>{{ contact.id }}</td>
                        <td>{{ contact.name }}</td>
                        <td>{{ contact.subject }}</td>
                        <td>{{ contact.message }}</td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<a href="{{ path('app_admin_contact_index') }}"
    >Retour a la liste des messages</a
>
{% endblock %}
