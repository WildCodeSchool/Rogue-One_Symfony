{% block body %}
<h1>Product index</h1>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Detail</th>
            <th>Image</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.name }}</td>
            <td>{{ product.price }}</td>
            <td>{{ product.detail }}</td>
            <td>{{ product.image }}</td>
            <td>
                <a
                    href="{{
                        path('app_admin_product_show', { id: product.id })
                    }}"
                    >show</a
                >
                <a
                    href="{{
                        path('app_admin_product_edit', { id: product.id })
                    }}"
                    >edit</a
                >
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">no records found</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a href="{{ path('app_admin_product_new') }}">Create new</a>

