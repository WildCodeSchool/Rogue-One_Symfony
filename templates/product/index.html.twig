<article class="section mocktails">
    <section class="container">
        <ul class="mocktails-filter" id="categories">
            <li>
                <button class="btn filter-button active" data-filter="all">
                    All
                </button>
            </li>
            {% for category in categories %}
            <li>
                <button
                    class="btn filter-button"
                    data-filter="{{ category.id }}"
                >
                    {{ category.name }}
                </button>
            </li>
            {% endfor %}
        </ul>
        <ul class="row mocktails-box">
            {% for product in products %}
            <li
                class="col-lg-3 col-md-6 col-sm-6 align-self-center mb-30 properties-items col-md-6"
                data-tag="{{ product.category.id }}"
            >
                <div
                    class="item text-center"
                    data-product-name="{{ product.name }}"
                >
                    <a
                        href="{{
                            path('app_product_show', { id: product.id })
                        }}"
                    >
                        <img
                            src="{{ asset('build/images/mocktails/' ~ product.image) }}"
                            alt="{{ product.name }}"
                        />
                    </a>
                    <span class="category">{{ product.category.name }}</span>
                    <h1>{{ product.name }}</h1>
                    <hr />
                    <span>{{ product.detail | slice(0, 100) ~ '...' }}</span>
                </div>
            </li>
            {% endfor %}
        </ul>
        <aside class="row">
            <div class="col-lg-12">
                <ul class="pagination">
                    {% for i in 1..pagesNumber %} {% if currentPage != i %}
                    <li>
                        <a
                            class="is_active"
                            href="{{ path('app_product_index', { page: i }) }}"
                            >{{ i }}</a
                        >
                    </li>
                    {% else %}
                    <li>
                        <a href="#" class="disabled">{{ i }}</a>
                    </li>
                    {% endif %} {% endfor %}
                </ul>
            </div>
        </aside>
    </section>
</article>
{% endblock %}
