{% extends 'admin.base.html.twig' %} {% block stylesheets %}
{{ encore_entry_link_tags("adminDashboardCss") }}
{% endblock %} {% block javascripts %}
{{ encore_entry_script_tags("adminDashboardJs") }}
{% endblock %} {% block content %}
<div class="container-fluid px-4">
    <h1>Inspecter la Categorie</h1>
    <div class="card mb-4">
        <div class="card-body">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                    </tr>
                    <tr>
                        <td>{{ category.id }}</td>
                        <td>{{ category.name }}</td>
                        <td>
                            <a
                                href="{{
                                    path('app_admin_category_edit', {
                                        id: category.id
                                    })
                                }}"
                                class="btn btn-warning btn-sm"
                                ><i class="fa-solid fa-pen"></i
                            ></a>
                            <form
                                method="post"
                                action="{{
                                    path('app_admin_category_delete', {
                                        id: category.id
                                    })
                                }}"
                                onsubmit="return confirm('Are you sure you want to delete this item?');"
                                style="display: inline"
                            >
                                <input
                                    type="hidden"
                                    name="_token"
                                    value="{{ csrf_token('delete' ~ category.id) }}"
                                />
                                <button class="btn btn-danger btn-sm">
                                    <i class="fa-solid fa-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<a href="{{ path('app_admin_category_index') }}"
    >Retour a la liste des Categories</a
>
{% endblock %}
