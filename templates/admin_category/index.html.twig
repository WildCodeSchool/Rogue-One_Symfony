{% extends 'admin.base.html.twig' %}
{% block stylesheets %}
{{
    encore_entry_link_tags("adminDashboardCss")
}}
{% endblock %} {% block javascripts %}

{{
    encore_entry_script_tags("adminDashboardJs")
}}
{% endblock %}
{% block content %}
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">Dashboard</h1>
                        <div class="card mb-4">
                            <div class="card-body">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nom</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        {% for category in categories %}
                                        <tr>
                                            <td>{{ category.id }}</td>
                                            <td>{{ category.name }}</td>
                                            <td>
                                                <a
                                                    href="{{
                                                        path(
                                                            "app_admin_category_show",
                                                            { id: category.id }
                                                        )
                                                    }}" class="btn btn-primary btn-sm" ><i class="fa-solid fa-eye"></i></a
                                                >
                                                <a
                                                    href="{{
                                                        path(
                                                            'app_admin_category_edit',
                                                            { id: category.id }
                                                        )
                                                    }}" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen"></i></a
                                                >
                                                <form method="post" action="{{ path('app_admin_category_delete', {'id': category.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ category.id) }}">
                                                    <button class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></button>
                                                </form>
                                            </td>
                                        </tr>
                                        {% else %}
                                        <tr>
                                            <td colspan="6">
                                                Introuvable
                                            </td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                    <div
                                    class="col-lg- col-md-6 col-sm-12 align-self-center mb-30 properties-items col-md-6 adv"
                                >
                                    <div>
                                        <a href="{{ path('app_admin_category_new') }}" class="btn btn-success">
                                            <i class="fa-solid fa-plus"></i>
                                            Ajouter une Nouvelle Categorie</a
                                        >
                                        </div>
                                    </div>
                                </table>
                            </div>
                        </div>
                    </div>
{% endblock %}
